    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iftalab.iphonebook.MainActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
