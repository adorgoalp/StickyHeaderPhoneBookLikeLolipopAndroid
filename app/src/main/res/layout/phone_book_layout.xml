        android:id="@+id/tvStickyTop"
        android:background="#ffffff"
        android:textSize="20sp"
        android:textColor="#4583e7"
        android:layout_width="@dimen/standard64"
        android:layout_height="@dimen/standard64" />

</RelativeLayout>
